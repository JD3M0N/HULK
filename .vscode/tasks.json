{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++.exe build active file (minGw)",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
              "-std=c++11",
              "-Wall",
              "-Werror",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
            "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": { "kind": "build", "isDefault": true }
        }
    ]
}
